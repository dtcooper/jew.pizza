{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "watch": {
    "build:css": "../backend/webcore/static/css/styles.css",
    "build:js": {
      "patterns": [
        "../backend/*/static/js/*.js"
      ],
      "ignore": [
        "*.min.js"
      ]
    }
  },
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwind -i ../backend/webcore/static/css/tailwind.css -o ../backend/webcore/static/css/styles.min.css --minify",
    "build:js": "ash -c 'for f in $(find '../backend/*/static/js/' -type f ! -iname '*.min.js' ! -name '*/vendor/*'); do npx uglify-js \"$f\" -o \"${f%.js}.min.js\" ; done'",
    "watch:build-css": "npm-watch build:css",
    "watch:dev-css": "tailwind -i ../backend/webcore/static/css/tailwind.css -o ../backend/webcore/static/css/styles.css --watch",
    "watch:build-js": "npm-watch build:js",
    "watch": "run-p watch:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dtcooper/jew.pizza.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dtcooper/jew.pizza/issues"
  },
  "homepage": "https://github.com/dtcooper/jew.pizza#readme",
  "devDependencies": {
    "daisyui": "^1.14.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "tailwindcss": "^2.2.9",
    "uglify-js": "^3.14.2"
  }
}
